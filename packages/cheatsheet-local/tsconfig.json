{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "jsx": "react-jsx",
    "composite": true,
    "lib": ["es5", "es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "references": [
    {
      "path": "../cheatsheet"
    }
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "../../typings/**/*.d.ts"]
}
